    classDef processStyle fill:#f3e5f5,stroke:#4a148c,stroke-width:3px
    classDef queryStyle fill:#fff3e0,stroke:#e65100,stroke-width:3px
    classDef backgroundStyle fill:#e8f5e8,stroke:#1b5e20,stroke-width:3px
